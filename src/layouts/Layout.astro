---
import '@/styles/globals.css';
import '@fontsource-variable/inter';
import '@fontsource/merriweather/700-italic.css';
import '@fontsource/merriweather/400.css';
import '@fontsource/merriweather/300.css';

import type { SeoProps } from '@/lib/types/seoProps';

import { ViewTransitions } from 'astro:transitions';

import Seo from '@/components/layout/Seo.astro';
import Footer from '@/sections/layout/Footer.astro';
import Nav from '@/sections/layout/Nav.astro';

interface Props extends SeoProps {}

const { title, description, preload, canonical, image } = Astro.props;
---

<!doctype html>
<html lang='es'>
  <head>
    <Seo
      canonical={canonical}
      description={description}
      image={image}
      preload={preload!}
      title={title}
    />
    <ViewTransitions />
  </head>
  <body>
    <Nav />
    <slot />
    <Footer />
  </body>
</html>
